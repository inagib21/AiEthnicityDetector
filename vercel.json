{
  "version": 2,
  "builds": [
    {
      "src": "api/index.py",
      "use": "@vercel/python",
      "config": {
        "pip": "pip3.12",
        "runtime": "python3.12"
      }
    },
    {
      "src": "package.json",
      "use": "@vercel/next",
      "config": {
        "distDir": ".next"
      }
    }
  ],
  "routes": [
    {
      "src": "/api/py/(.*)",
      "dest": "/api/index?path=$1"
    },
    {
      "src": "/(.*)",
      "dest": "/$1"
    }
  ]
} 