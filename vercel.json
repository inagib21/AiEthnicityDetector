{
  "version": 2,
  "builds": [
    {
      "src": "api/index.py",
      "use": "@vercel/static-build",
      "config": {
        "buildCommand": "./build.sh",
        "zeroConfig": true
      }
    },
    {
      "src": "package.json",
      "use": "@vercel/next",
      "config": {
        "distDir": ".next"
      }
    }
  ],
  "routes": [
    {
      "src": "/api/py/(.*)",
      "dest": "/api/index.py"
    },
    {
      "src": "/(.*)",
      "dest": "/$1"
    }
  ]
} 